func _ready():
	connect('pressed', self, 'on_pressed')
	
	
func _input(event: InputEvent):
	if event is InputEventMouseButton:
		if event.button_index == BUTTON_LEFT:
			if get_rect().has_point(event.position):
				if event.pressed:
					pass
				elif Drag.atom:
					Drag.atom.free()
					Drag.atom = null
	
	
func on_pressed():
	for a in Global.blackboard.get_atoms():
		a.free()

